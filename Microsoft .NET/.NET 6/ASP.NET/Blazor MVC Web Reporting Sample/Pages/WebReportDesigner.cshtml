@page 

<script src="~/webreportdesigner.js"></script>

<HeadContent>
    <title>Web Report Designer</title>
</HeadContent>

@{
    Layout = "_Layout";
    string baseUri = $"{Request.Scheme}://{Request.Host}";
    string defaultProject = string.Empty;

    if (WebReportingSample.CmbtSettings.Language == combit.Reporting.LlLanguage.English)
    {
        defaultProject = "42B325E5-A894-4BDE-9D0A-5098B46A5085";
    }
    else
    { 
        defaultProject = "305D94C6-E5DC-4BE1-BC43-12CBC532EEE6";
    }
}

<div>
    <ll-webreportdesigner backendurl="@baseUri/LLWebReportDesigner" defaultProject="@defaultProject" />
</div>

