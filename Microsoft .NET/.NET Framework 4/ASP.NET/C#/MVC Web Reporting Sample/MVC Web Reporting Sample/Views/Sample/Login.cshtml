@{
    ViewBag.Title = "Login";
}

<div style="max-width: 500px; margin:auto; margin-top: 100px">
    <h2>Login</h2>
    Please enter any user name to use the sample with forms authentication.<br /><br />
    The web reporting components also support Windows authentication, which may be configured in the web.config file.
    <br /><br />
    @using (Html.BeginForm("Login", "Sample", FormMethod.Post))
    {

        @Html.Label("UserName", "Enter any user name:")
        @Html.TextBox("UserName", "Test")

        <button type="submit" class="ui-btn-a">Login</button>
    }
</div>