@using System.Web.Optimization
@using combit.Reporting.Web
@using combit.Reporting.Web.WebReportDesigner
@{
    Layout = null;
    string repositoryId = Request.QueryString["reportRepositoryID"];
    if (!String.IsNullOrEmpty(repositoryId))
    {
        repositoryId = repositoryId.Replace("repository://{", "").Replace("}", "");
    }

    var options = new WebReportDesignerMVCOptions(repositoryId)
	{
		Title = "Web Report Designer",
		ShowTutorial = true,
	};
}

<!DOCTYPE html>

@Html.WebReportDesigner(options);